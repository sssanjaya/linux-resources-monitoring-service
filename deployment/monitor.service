[Unit]
Description=Linux Resources Monitoring Service
After=network.target

[Service]
Type=simple
# Set your Linux username here
User=YOUR_USERNAME
# Set the absolute path to your project directory
WorkingDirectory=/path/to/linux-resources-monitoring-service
# Set the absolute path to your venv's python
ExecStart=/path/to/venv/bin/python -m monitor_service.metric_collector
Restart=on-failure

[Install]
WantedBy=multi-user.target
